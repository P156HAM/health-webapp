{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "deploy:prod": "NODE_ENV=prod firebase deploy --only functions --project vizu-health-production",
    "deploy:dev": "NODE_ENV=dev firebase deploy --only functions --project closar-dev",
    "deploy:func": "NODE_ENV=dev firebase deploy --only functions:sendMessage --project closar-dev"
  },
  "engines": {
    "node": "18"
  },
  "main": "index.js",
  "dependencies": {
    "@google-cloud/tasks": "^5.5.0",
    "@sendgrid/mail": "^8.1.3",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "expo-server-sdk": "^3.11.0",
    "express": "^4.21.0",
    "express-rate-limit": "^7.3.1",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.0",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
